{
  "name": "@mint/apps",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev:proxy": "pnpm turbo run dev:proxy --filter=@mint/infra",
    "dev:webapp": "pnpm turbo run dev:https:proxy --filter=@mint/webapp...",
    "dev:tgma": "pnpm turbo run dev:https:proxy --filter=@mint/tgma...",
    "dev:api": "pnpm turbo run dev:https:proxy --filter=@mint/api...",

    "ci:packages:build": "pnpm run packages:build",
    "ci:packages:deps": "pnpm i --filter=\"./packages/*\"",
    "ci:packages:lint": "pnpm run packages:lint",
    "ci:packages:test": "vitest --run",
    "ci:packages:rollup": "pnpm run ci:packages:deps && pnpm run ci:packages:build && pnpm run ci:packages:lint && pnpm run ci:packages:typecheck && pnpm run ci:packages:test",
    "commit": "git cz",
    "dev": "turbo run dev",
    "packages:build": "turbo run build --filter=\"./packages/*\"",
    "packages:lint": "turbo run lint --filter=\"./packages/*\"",
    "packages:lint:fix": "turbo run lint:fix --filter=\"./packages/*\"",
    "packages:test": "vitest --run --retry 3",
    "prepare": "husky"
  },
  "devDependencies": {
    "@changesets/cli": "catalog:",
    "@eslint/js": "catalog:",
    "@mint/infra": "workspace:*",
    "@rollup/plugin-node-resolve": "catalog:",
    "@turbo/gen": "catalog:",
    "@vitest/coverage-v8": "catalog:",
    "@vitest/ui": "catalog:",
    "husky": "catalog:",
    "next": "catalog:",
    "rimraf": "catalog:",
    "tslib": "catalog:",
    "tsx": "catalog:",
    "turbo": "catalog:",
    "typescript": "^5.9.3",
    "vite": "catalog:",
    "vite-plugin-dts": "catalog:",
    "vite-plugin-mkcert": "catalog:",
    "vite-plugin-solid": "catalog:",
    "vite-tsconfig-paths": "catalog:",
    "vitest": "^2.1.6"
  },
  "packageManager": "pnpm@10.19.0",
  "pnpm": {
    "overrides": {
      "react": "19",
      "react-dom": "19",
      "@types/react": "19",
      "@types/react-dom": "19",
      "@react-pdf/types": "2.7.0"
    }
  }
}
