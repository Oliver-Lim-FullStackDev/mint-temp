{
  "version": "2.0.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "dev:proxy",
      "runtimeExecutable": "pnpm",
      "runtimeArgs": ["run", "dev:proxy"],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "presentation": {
        "hidden": false,
        "group": "core",
        "order": 10
      }
    },
    {
      "type": "node",
      "request": "launch",
      "name": "api:proxy (inspect 9230)",
      "runtimeExecutable": "pnpm",
      "runtimeArgs": ["run", "dev:api"],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "env": { "NODE_OPTIONS": "--inspect=9230" },
      "skipFiles": ["<node_internals>/**", "**/node_modules/**"],
      "sourceMaps": true,
      "presentation": {
        "hidden": false,
        "group": "core",
        "order": 20
      }
    },
    {
      "type": "node",
      "request": "attach",
      "name": "Attach: API (9230)",
      "port": 9230,
      "restart": true,
      "timeout": 30000,
      "skipFiles": ["<node_internals>/**", "**/node_modules/**"],
      "sourceMaps": true,
      "presentation": {
        "hidden": true
      }
    },
    {
      "type": "node",
