{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "jsx": "react-jsx",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "declaration": true,
    "emitDeclarationOnly": false,
    "noEmitOnError": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "isolatedModules": false,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": { "src/*": ["src/*"] }
  },
  "include": ["src/**/*"],
  "exclude": ["**/node_modules", "**/dist", "../../packages/ui", "../../apps"]
}
