{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "baseUrl": ".",
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "incremental": true,
    "isolatedModules": true,
    "lib": ["es2022", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "noUncheckedIndexedAccess": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "strictNullChecks": true,
    "target": "ES2022",
    "outDir": "dist",
    "resolvePackageJsonImports": true,
    "paths": {
      "@mint/config": ["../../packages/config"],
      "@mint/config/*": ["../../packages/config/*"],
      "@mint/gamestudio-api": ["../../packages/gamestudio-api/src/index.ts"],
      "@mint/gamestudio-api/*": ["../../packages/gamestudio-api/src/*"],
      "@mint/game-internal": ["../../packages/game-internal/src/index.ts"],
      "@mint/game-internal/*": ["../../packages/game-internal/src/*"],
      "@mint/slots": ["../../packages/mint-slots"],
      "@mint/slots/*": ["../../packages/mint-slots/src/*"],

      "@mint/mui/*": ["../../packages/mui/dist/*"],
      "@mint/ui/*": ["../../packages/ui/src/*"],

      // For the sake of drop-in updates to the mui module
      // this ensures ui can keep its internal imports with "src/*" path
      // "src/*": ["../../packages/mui/src/*"]
    }
  }
}
