{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["pnpm-lock.yaml", "turbo.json", "**/.env.*local"],
  "globalEnv": ["TELEGRAM_BOT_TOKEN", "TELEGRAM_BOT_URL"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**", "!**/.next/cache/**"]
    },
    "dev": {
      "dependsOn": ["^build"],
      "persistent": true,
      "cache": false
    },
    "dev:https": {
      "dependsOn": ["^build"],
      "persistent": true,
      "cache": false
    },
    "dev:https:proxy": {
      "dependsOn": ["^build"],
      "persistent": true,
      "cache": false
    },
    "dev:proxy": {
      "persistent": true,
      "cache": false
    }
  }
}
